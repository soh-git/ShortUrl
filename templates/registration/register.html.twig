{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container vh-80 p-5">

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
    <div class="mb-2"> 
    
        {{ form_row(registrationForm.email) }}
    </div>
    <div class="mb-2">
     {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
    </div>
       

        <button type="submit" class="btn btn-lg  bgRebeccaPurple text-white">Register</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
